@model IEnumerable<Core.City>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Population)
        </th>
        <th></th>
    </tr>

@foreach (var city in Model) {
   
    <tr>
        <td>
            @Html.DisplayFor(modelItem => city.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => city.Population)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=city.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=city.Id }) |
            @Html.ActionLink("Show hotels", "Hotels", new { id=city.Id  }) |
            @Html.ActionLink("Show Weather Forecast", "Weather", new { id=city.Id })
        </td>
    </tr> 
      
        
}

</table>
